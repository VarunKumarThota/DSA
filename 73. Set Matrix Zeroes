class Solution {
    public void setZeroes(int[][] matrix) {
        int n = matrix.length;
        int m=matrix[0].length;
        ArrayList<int[]> load0 = new ArrayList<>();
        for(int i = 0;i < n;i++){
            for(int j = 0; j < m;j++){
                if(matrix[i][j] == 0){
                    load0.add(new int[]{i,j});
                }
            }
        }

       for(int[] p0 : load0){
        int row = p0[0];
        int col = p0[1];

        for(int i = 0; i < n;i++){
            matrix[i][col] = 0;
        }
        for(int j = 0; j < m;j++){
            matrix[row][j] = 0;
        }
       } 
    }
}
